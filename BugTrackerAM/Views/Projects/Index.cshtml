<!-- Content ----Main White color area-->
<section id="content" class="container">


    @model IEnumerable<BugTrackerAM.Models.CodeFirst.Project>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Projects Index View</h2>
    <h4>
        <i><b>Total Projects: @Model.Count()</b></i>
    </h4>
    


    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-large" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
               
            </th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-large" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id },new { @class = "btn btn-warning btn-large" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class = "btn btn-danger btn-large" })

                    @Html.ActionLink("+Project-Users", "AssignUsers", "ProjectUsers", new { id = item.Id }, new { @class = "btn btn-success btn-large" })
                    @Html.ActionLink("-Project-Users", "RemoveUsers", "ProjectUsers", new { id = item.Id }, new { @class = "btn btn-danger btn-large" })


                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-large" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-large" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-large" })*@

                    
                </td>
            </tr>
        }

    </table>

</section>

