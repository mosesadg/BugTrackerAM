

<!-- Content ----Main W    hite color area-->
<section id="content" class="container">



    @using BugTrackerAM.Models.CodeFirst
    @{
        ViewBag.Title = "Users";
    }

    <h2>User Role Management</h2>

    <div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="example">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>



                
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr class="gradeX">

                                    <td> @user.DisplayName</td>
                                    <td> @user.Email</td>
                                    <td>
                                    @Html.ActionLink("Edit Users", "EditUser", new { Id = user.Id },new { @class = "btn btn-primary btn-large" })
                                    </td>                           
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
        </div>
    </div>


</section>

